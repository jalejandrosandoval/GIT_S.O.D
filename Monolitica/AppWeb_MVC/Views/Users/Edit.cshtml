@model AppWeb_MVC.Models.UsersViewModel
@using Bussiness_Logic.Models.Enums

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-users-cog"></i>
            <b> Usuarios </b>
        </h1>
    </div>

    <div class="card shadow">

        <div class="card-header py-3">
            <h6 class="text-primary">
                <label> <i class="fas fa-user-plus"> </i> <b> Edición de Usuarios </b> </label>
            </h6>
        </div>

        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <form asp-action="Edit">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id_Users" />
                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="FirstName" class="font-weight-bold text-dark"></label>
                                    <input asp-for="FirstName" class="form-control form-control-user" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-4">
                                    <label asp-for="LastName" class="font-weight-bold text-dark"></label>
                                    <input asp-for="LastName" class="form-control form-control-user" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-4">
                                    <label asp-for="Username" class="font-weight-bold text-dark"></label>
                                    <input asp-for="Username" class="form-control form-control-user" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="UserPassword" class="font-weight-bold text-dark"></label>
                                    <input asp-for="UserPassword" class="form-control form-control-user" type="password" />
                                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="N_Identification" class="font-weight-bold text-dark"></label>
                                    <input asp-for="N_Identification" class="form-control" />
                                    <span asp-validation-for="N_Identification" class="text-danger"></span>
                                </div>
                                <div class="col-sm-4">
                                    <label asp-for="TypeDocument" class="font-weight-bold text-dark"></label>
                                    <select asp-for="TypeDocument" class="form-control custom-select" title="Seleccione..."
                                            asp-items="@Html.GetEnumSelectList<TypeIdentificationClass.ETypeId>()">
                                        <option value="">Seleccione...</option>
                                    </select>
                                    <span asp-validation-for="TypeDocument" class="text-danger"></span>
                                </div>
                                <div class="col-sm-4 ">
                                    <label asp-for="UserEmail" class="font-weight-bold text-dark"></label>
                                    <input asp-for="UserEmail" class="form-control" />
                                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="Status" class="font-weight-bold text-dark"></label>
                                    <select asp-for="Status" class="form-control custom-select" title="Seleccione un Estado..."
                                            asp-items="@Html.GetEnumSelectList<StatusClass.EStatus>()">
                                        <option value="">Seleccione...</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="col-sm-4">
                                    <label asp-for="UserType" class="font-weight-bold text-dark"></label>
                                    <select asp-for="UserType" class="form-control custom-select" title="Seleccione un Tipo..."
                                            asp-items="@Html.GetEnumSelectList<UserTypeClass.UType>()">
                                        <option value="">Seleccione...</option>
                                    </select>
                                    <span asp-validation-for="UserType" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-sm-3 mb-3 mb-sm-0 offset-sm-3">
                                    <a class="btn btn-danger btn-user btn-block"
                                       asp-action="Index">
                                        <i class="fas fa-times-circle"></i> Cancelar
                                    </a>
                                </div>
                                <div class="col-sm-3 mb-3 mb-sm-0 ">
                                    <button type="submit" value="Save" class="btn btn-success btn-user btn-block">
                                        <i class="fas fa-save"></i> Editar
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
