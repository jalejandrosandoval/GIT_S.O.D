@model IEnumerable<Bussiness_Logic.Models.Equipment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-cog"></i>
            <b> Equipos </b>
        </h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">

            <p>
                <a asp-action="Create" class="btn btn-success btn-user"> <i class="fas fa-plus"></i> Agregar Equipos</a>
            </p>

            <div class="table-responsive">
                <table id="table_id" class="table table-bordered table-responsive table-hover table-striped" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipement_Internal_Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipment_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipment_TradeMark)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipment_Model)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipment_SN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipment_Observations)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipment_Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipment_Warranty)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a class="btn btn-warning fas fa-edit" title="Editar Equipo" asp-action="Edit" asp-route-id="@item.Id_Equipment"></a>
                                    <a class="btn btn-info fas fa-eye" title="Visualizar Equipo" asp-action="Details" asp-route-id="@item.Id_Equipment"></a>
                                    <a class="btn btn-danger fas fa-times-circle" title="Desactivar Equipo" asp-action="Desactive" asp-route-id="@item.Id_Equipment"></a>
                                    <a class="btn btn-dark fas fa-trash-alt" title="Eliminar Equipo" asp-action="Delete" asp-route-id="@item.Id_Equipment"></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Equipement_Internal_Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Equipment_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Equipment_TradeMark)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Equipment_Model)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Equipment_SN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Equipment_Observations)
                                </td>
                                <td>
                                    @if (item.Equipment_Status.ToString() == "Activo")
                                    {
                                        <span class="bg-success text-white"> @Html.DisplayFor(modelItem => item.Equipment_Status) </span>
                                    }
                                    else
                                    {
                                        <span class="bg-danger text-white"> @Html.DisplayFor(modelItem => item.Equipment_Status) </span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Equipment_Warranty)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
