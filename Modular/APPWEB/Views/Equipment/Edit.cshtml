                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Equipment_Status" /> @Html.DisplayNameFor(model => model.Equipment_Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Equipment_Warranty" class="control-label"></label>
                <input asp-for="Equipment_Warranty" class="form-control" />
                <span asp-validation-for="Equipment_Warranty" class="text-danger"></span>
