
@{
    ViewData["Title"] = "ManageEquipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4 col-xl-4 offset-sm-4 col-md-4 mb-4 text-center">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-fw fa-tools"></i>
            <b> Administrar </b>
        </h1>
    </div>

    <div class="card shadow">

        <div class="card-body">

            <div class="row">

                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card bg-info shadow h-100 py-2">
                        <div class="card-body bg-info">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="h5 mb-0 font-weight-bold text-white">
                                        <a class="text-white text-decoration-none"
                                           asp-area="" asp-controller="Equipment" asp-action="Index"> Equipos </a>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-fw fa-sync-alt fa-2x text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-md-6 mb-4 ">
                    <div class="card bg-warning shadow h-100 py-2">
                        <div class="card-body bg-warning">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="h5 mb-0 font-weight-bold text-white">
                                        <a class="text-white text-decoration-none"
                                           asp-area="" asp-controller="Lendings" asp-action="Index"> Préstamos </a>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-fw fa-business-time fa-2x text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-md-6 mb-4 ">
                    <div class="card bg-dark shadow h-100 py-2">
                        <div class="card-body bg-dark">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="h5 mb-0 font-weight-bold text-white">
                                        <a class="text-white text-decoration-none"
                                           asp-area="" asp-controller="Mantenaince" asp-action="Index"> Mantenimientos </a>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-fw fa-wrench fa-2x text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>


</div>