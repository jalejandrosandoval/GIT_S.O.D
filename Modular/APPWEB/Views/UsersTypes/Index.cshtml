@model IEnumerable<Bussiness_Logic.Models.UsersType> 

@{
    ViewData["Title"] = "Tipo de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-users-cog"></i>
            <b> Usuarios </b>
        </h1>
    </div>


    <div class="card shadow mb-4">
        <div class="card-body">

            <p>
                <a asp-action="Create" class="btn btn-success btn-user"> <i class="fas fa-plus"></i> Agregar Usuario</a>
            </p>

            <div class="table-responsive">
                <table id="table_id" class="table table-bordered table-responsive table-hover table-striped" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Opciones
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UsersTypeName)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a class="btn btn-warning fas fa-edit" title="Editar Usuario" asp-action="Edit" asp-route-id="@item.Id_UsersType"></a>
                                    <a class="btn btn-info fas fa-eye" title="Visualizar Usuario" asp-action="Details" asp-route-id="@item.Id_UsersType"></a>
                                    <a class="btn btn-danger fas fa-times-circle" title="Desactivar Usuario" asp-action="Deactive" asp-route-id="@item.Id_UsersType"></a>
                                    <a class="btn btn-dark fas fa-trash-alt" title="Eliminar Usuario" asp-action="Delete" asp-route-id="@item.Id_UsersType"></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UsersTypeName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>